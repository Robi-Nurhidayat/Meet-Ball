<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_200"
    android:layout_height="match_parent"
    tools:context=".HalamanUtamaAdmin">

    <Button
        android:id="@+id/logoutAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/secondary_700"
        android:fontFamily="@font/poppins_medium"
        app:icon="@drawable/ic_logout"
        app:iconTint="@color/secondary_700"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Dashboard"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:text="Selamat Datang, Admin"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"/>

    <!-- A CardView that contains a TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_pesanan"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:elevation="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            app:cardMaxElevation="20dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo_pesanan_admin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="30dp"
                    android:src="@drawable/logo_pesanan_masuk" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo_pesanan_admin"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="20dp"
                    android:text="Pesanan Masuk"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textColor="@color/primary_700"
                    android:fontFamily="@font/poppins_medium" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_pemasukkan"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:elevation="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            app:cardMaxElevation="20dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo_duit"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="30dp"
                    android:src="@drawable/dolar" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo_duit"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="20dp"
                    android:text="Pemasukkan"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textColor="@color/primary_700"
                    android:fontFamily="@font/poppins_medium" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_produk"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:elevation="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            app:cardMaxElevation="20dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo_produk"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginBottom="73dp"
                    android:src="@drawable/produk" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="20dp"
                    android:text="Produk Tersedia"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textColor="@color/primary_700"
                    android:fontFamily="@font/poppins_medium" />

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_minuman"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:elevation="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            app:cardMaxElevation="20dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo_a"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/drink"
                    android:layout_marginEnd="30dp"
                     />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="20dp"
                    android:text="Minuman Tersedia"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textColor="@color/primary_700"
                    android:fontFamily="@font/poppins_medium" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</LinearLayout>