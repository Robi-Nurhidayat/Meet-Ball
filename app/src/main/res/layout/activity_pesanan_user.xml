<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/primary_500">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Form Input Pesanan"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/et_nama_pemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:inputType="textCapSentences"/>

        <EditText
            android:id="@+id/no_meja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Meja"
            android:inputType="number"/>

        <EditText
            android:id="@+id/pesanan_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pesanan 1"
            android:inputType="textCapSentences"/>

        <EditText
            android:id="@+id/jumlah_pesanan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumlah Pesanan"
            android:inputType="number"/>

        <EditText
            android:id="@+id/pesanan_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pesanan 2"
            android:inputType="textCapSentences"/>

        <EditText
            android:id="@+id/jumlah_pesanan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumlah Pesanan"
            android:inputType="number"/>

        <EditText
            android:id="@+id/keteranganPesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Keterangan"
            android:inputType="textCapSentences"/>

        <EditText
            android:id="@+id/status_pesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status"
            android:inputType="textCapSentences"/>

        <Button
            android:id="@+id/btnSimpanPesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan"/>

    </LinearLayout>


</LinearLayout>