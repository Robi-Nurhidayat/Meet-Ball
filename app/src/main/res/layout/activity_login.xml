<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".LoginActivity">


    <!-- A CardView that contains a TextView -->

    <TextView
        android:id="@+id/textMet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meetball"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="35dp"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/baso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="114dp"
        android:layout_below="@+id/textMet"
        android:src="@drawable/baso" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_below="@+id/baso"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:hint="Email"
                android:id="@+id/textEmail"
                android:layout_marginTop="40dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:id="@+id/textPwd"
                android:hint="Password"
                android:layout_marginTop="10dp"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:layout_marginTop="10dp"
                   android:layout_marginEnd="155dp"
                   android:text="@string/login" />

           </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/lupaPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lupa_password"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="122dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@+id/lupaPwd"
                    android:text="@string/sign_up" />


            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>